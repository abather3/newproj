NODE_ENV=development
PORT=5000

# Database - for development you can set up a local PostgreSQL or use a cloud service
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/escashop

# JWT Secrets (change these in production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URL
FRONTEND_URL=http://localhost:3000

# SMS Service (configure when needed)
SMS_PROVIDER=vonage
SMS_ENABLED=true
SMS_FROM=EscaShop
VONAGE_API_KEY=your-vonage-api-key
VONAGE_API_SECRET=your-vonage-api-secret

# Email Service (configure when needed)
EMAIL_SERVICE_ENABLED=true
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# Google Sheets Integration
GOOGLE_SHEETS_URL=https://script.google.com/macros/s/your-script-id/exec

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Session
SESSION_TIMEOUT=600000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Queue Management
AVERAGE_SERVICE_TIME=15
PRIORITY_BOOST=1000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Backup
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
